<section>
  <h1 class="text-center">Azure Speech Services</h1>
  <h3 class="text-center">Create New Profile</h3>
  <form>
    <input type="file" id="uploadAudioSignatureFile" multiple>
    <button type="button" class="btn btn-primary" id="enrollProfileButton">Enroll Profile</button>
  </form>
  <div class="container row">
    <div class='text-center col-md-8'>
      <h3 class="text-center">Upload Audio</h3>
      <form class='d-flex justify-content-center'>
        <div class="form-group">
          <label for="uploadFile">Upload new audio clip to test against a profile (.wav files only)</label>
          <input type="file" id="uploadNewFile" class='form-control-file' accept=".wav">
          <button type="button" class="btn btn-primary" id="uploadNewFileButton">Upload</button>
        </div>
      </form>
    </div>
    <div class='d-flex justify-content-center text-center col-md-4'>
      <form>
        <div class='p-3'>
          <h2>Verify Speaker</h2>
          <h3>1. Select Audio Clip</h3>
          <select id="fileSelect">
            <% @files.each do |file| %>
              <div class='form-check m-2'>
                <option value="<%=file%>"><%= file %></option>
              </div>
            <% end %>
          </select>
        </div>
        <div class="form-group m-3 p-3">
          <h3>2. Select Voice Profile</h3>
          <select id="profileSelect" class='form-control'>
            <% @profiles.each do |p| %>
              <option value="<%= p.profile_id %>"><%= p.user_name %> </option>
            <% end %>
          </select>
        </div>
        <h3 id="resultText"></h3>
        <button type="button" class="btn btn-primary" id="checkAudioButton">Verify Profile</button>
      </form>
    </div>
  </div>
</section>
<% javascript_include_tag 'azure_speech' %>
