<% provide :head_tags do %>
  <%= include_recaptcha_js %>
<% end %>
<%= content_for :recaptcha_js do %>
  <%= include_recaptcha_js %>
<% end %>
<style>
  .grecaptcha-badge {
      visibility: hidden;
  }
</style>
<section id="contact">
  <div class="container">
    <div class="col-12 text-center m-10">
      <div>
        <h1>Contact Us</h1>
      </div>
    </div>
    <%= simple_form_for Lead.new, validates: true do |form_lead| %>
      <div class="form-row">
        <div class="col-md-4 mb-3">
          <%= form_lead.input :full_name %>
        </div>
        <div class="col-md-4 mb-3">
          <%= form_lead.input :email, as: :email %>
        </div>
        <div class="col-md-4 mb-3">
          <%= form_lead.input :phone %>
        </div>
        <div class="col-md-4 mb-3">
          <%= form_lead.input :business_name %>
        </div>
        <div class="col-md-4 mb-3">
          <%= form_lead.input :project_name %>
        </div>
        <div class="col-md-4 mb-3">
          <%= form_lead.input :department, as: :select, collection: ["Elevator Consultant", "Building Manager", "Architect"] %>
        </div>
      </div>
      <div class="form-row">
        <div class="col-md-6 mb-3">
          <%= form_lead.input :project_description, as: :text %>
        </div>
        <div class="col-md-6 mb-3">
          <%= form_lead.input :message, as: :text %>
        </div>
        <div class="col-12 text-center d-flex justify-content-center mb-3">
          <div class="custom-file col-6">
            <%= form_lead.file_field :attachment, class: 'custom-file-input', id: 'fileupload' %>
            <label class="custom-file-label" for="fileupload">Attach file</label>
          </div>
        </div>
      </div>
      <div class="col-12 text-center mb-3 mt-6">
        <small class="text-center">This site is protected by reCAPTCHA and the Google
          <a href="https://policies.google.com/privacy">Privacy Policy</a> and
          <a href="https://policies.google.com/terms">Terms of Service</a> apply.</small>
        <%= recaptcha_action('lead') %>
      </div>
      <div class="form-row d-flex justify-content-center m-10">
        <%= form_lead.button :submit, 'Send Message', class: 'btn btn-lg btn-info' %>
      </div>
    <% end %>
  </div>
</section>
